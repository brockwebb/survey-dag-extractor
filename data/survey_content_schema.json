{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Survey Content",
  "type": "object",
  "required": ["survey_content"],
  "properties": {
    "survey_content": {
      "type": "object",
      "required": ["nodes"],
      "additionalProperties": false,
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "text", "response_type"],
            "properties": {
              "id": { "type": "string" },
              "text": { "type": "string" },
              "response_type": {
                "type": "string",
                "enum": ["enum", "set", "text", "number", "boolean"]
              },
              "response_options": {
                "type": ["array", "null"],
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["code", "text"],
                  "properties": {
                    "code": { "type": ["integer", "string"] },
                    "text": { "type": "string" }
                  }
                }
              },
              "group_id": { "type": ["string", "null"] },
              "provenance": {
                "type": ["object", "null"],
                "additionalProperties": true
              }
            }
          }
        }
      }
    }
  }
}

